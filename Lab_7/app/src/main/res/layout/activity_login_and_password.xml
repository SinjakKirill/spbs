<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_and_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sinyakkirill.lab_4_5.registrationactivity.LoginAndPasswordActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <Button
                android:background="@drawable/cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/cancel_button"
                android:onClick="cancelRegistration"
                />

            <ImageView
                android:layout_width="81dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/logotip_registration"
                android:id="@+id/imageView3"
                android:layout_gravity="right"
                android:paddingLeft="200dp"
                android:layout_weight="0.21"/>

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/login"
            android:id="@+id/imageView8"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="login"
            android:ems="10"
            android:id="@+id/loginEditText"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/key"
            android:id="@+id/imageView9"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditText"
            android:hint="password"
            android:textAlignment="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            >

            <Button
                android:background="@drawable/prev"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:id="@+id/prev_button"
                android:layout_marginTop="70dp"
                android:onClick="prevPage"
                />

            <Button
                android:background="@drawable/next"
                android:onClick="nextPage"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="70dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:id="@+id/next_button"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
